<?php

/**
 * @file
 * Install hooks for the springboard_token_set_wildcard module.
 */

/**
 * Implements hook_schema()
 */
function springboard_token_set_wildcard_schema() {
  $schema = array();
  $schema['springboard_token_set_path_field_map'] = array(
    'description' => 'Maps token sets to path+form_key combinations.',
    'fields' => array(
      'tsid' => array(
        'description' => 'Default token set ID for the target field.',
        'type' => 'int',
        'unsigned' => TRUE,
        'not null' => TRUE,
      ),
      'path' => array(
        'description' => 'The path where the token set should appear.',
        'type' => 'varchar',
        'length' => '128',
        'not null' => TRUE,
      ),
      'form_id' => array(
        'description' => 'The form ID of the form where the token should be attached.',
        'type' => 'varchar',
        'length' => '128',
        'not null' => TRUE,
      ),
      'form_key' => array(
        'description' => 'The form key of the field where the token should be attached.',
        'type' => 'varchar',
        'length' => '128',
        'not null' => TRUE,
      ),
    ),
  );
  return $schema;
}

/**
 * Implements hook_enable().
 */
function springboard_token_set_wildcard_enable() {
  // Ensure this module runs after other modules since those module may add form elements
  // that will require the Token UI:
  db_update('system')
    ->fields(array('weight' => 200))
    ->condition('type', 'module')
    ->condition('name', 'springboard_token_set_wildcard')
    ->execute();
}
